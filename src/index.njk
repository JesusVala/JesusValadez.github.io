layout: main_layout.njk
cssFile: "game.css"
jsFile: "game.js"
---

<div id="counter">
    <div id="counter_points">0</div>
    <div>/20</div>
</div>

<div id="controlls">
    <div id='directions'>
        <button id="forward">
            <svg width="30" height="30" viewBox="0 0 10 10">
                <g transform="rotate(0, 5,5)">
                    <path d="M5,4 L7,6 L3,6 L5,4"/>
                </g>
            </svg>
        </button>
        <button id="left">
            <svg width="30" height="30" viewBox="0 0 10 10">
                <g transform="rotate(-90, 5,5)">
                    <path d="M5,4 L7,6 L3,6 L5,4"/>
                </g>
            </svg>
        </button>
        <button id="backward">
            <svg width="30" height="30" viewBox="0 0 10 10">
                <g transform="rotate(180, 5,5)">
                    <path d="M5,4 L7,6 L3,6 L5,4"/>
                </g>
            </svg>
        </button>
        <button id="right">
            <svg width="30" height="30" viewBox="0 0 10 10">
                <g transform="rotate(90, 5,5)">
                    <path d="M5,4 L7,6 L3,6 L5,4"/>
                </g>
            </svg>
        </button>
    </div>
    <div id="actions">
        <button id="action_q">
            <svg width="30" height="30" viewBox="0 0 10 10">
                <<text y="8" x="2" font-size="5px" >Q</text>>
            </svg>
        </button>
    </div>
</div>

<!-- The dialog -->
<dialog id="txt_bubble" class="dialog">
    <p id="text_dialog">In a hole in the ground there lived a hobbit. Not a nasty, dirty, wet hole  filled with the ends of worms and an oozy smell, nor yet a dry, bare, sandy hole with nothing in it to sit down on or to eat: it was a hobbit-hole, and that means comfort.</p>
    <form method="dialog">
        <div>
            <button value="ok">Ok</button>
        </div>
    </form>
</dialog>

<div id="end">
    <button id="retry">Retry</button>
</div>